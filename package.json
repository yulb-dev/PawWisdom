{
  "name": "pawwisdom",
  "version": "1.0.0",
  "private": true,
  "description": "PawWisdom - AI驱动的宠物健康与生活社区",
  "scripts": {
    "prepare": "husky",
    "dev:backend": "pnpm --filter back-end start:dev",
    "dev:frontend": "pnpm --filter front-end start",
    "dev": "pnpm run dev:backend & pnpm run dev:frontend",
    "build:backend": "pnpm --filter back-end build",
    "build:frontend": "pnpm --filter front-end build",
    "build": "pnpm --filter back-end build && pnpm --filter front-end build",
    "lint:backend": "pnpm --filter back-end lint",
    "lint:frontend": "pnpm --filter front-end lint",
    "lint": "pnpm --filter back-end lint && pnpm --filter front-end lint",
    "test:backend": "pnpm --filter back-end test",
    "test:frontend": "pnpm --filter front-end test",
    "clean": "pnpm -r exec rm -rf node_modules && rm -rf node_modules"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0"
  },
  "lint-staged": {
    "back-end/**/*.{ts,tsx}": [
      "pnpm --filter back-end exec eslint --fix"
    ],
    "front-end/**/*.{ts,tsx}": [
      "pnpm --filter front-end exec eslint --fix"
    ]
  }
}
