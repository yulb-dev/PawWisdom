{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "corepack enable && pnpm install --frozen-lockfile && pnpm --filter back-end build"
  },
  "deploy": {
    "startCommand": "pnpm --filter back-end start:prod",
    "healthcheckPath": "/api",
    "healthcheckTimeout": 120
  }
}
